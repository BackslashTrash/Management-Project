<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootVBox" prefHeight="600.0" prefWidth="900.0" spacing="20.0" style="-fx-background-color: #F8F9FA;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.backslashtrash.project1.Controller">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    <children>
        <!-- Header Section -->
        <HBox alignment="CENTER_LEFT" spacing="15.0">
            <children>
                <Button mnemonicParsing="false" onAction="#onBackToDashboard" style="-fx-background-color: white; -fx-border-color: #CED4DA; -fx-border-radius: 4; -fx-background-radius: 4; -fx-cursor: hand;" text="â† Back">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Button>
                <Label text="Employee Management" textFill="#343a40">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </HBox>

        <!-- Toolbar Section -->
        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 0);">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <Button mnemonicParsing="false" onAction="#onAddJob" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand;" text="+ Add Job">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                    <padding>
                        <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
                    </padding>
                </Button>
                <Button mnemonicParsing="false" onAction="#onAddTask" style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand;" text="+ Add Task">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                    <padding>
                        <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
                    </padding>
                </Button>

                <Button mnemonicParsing="false" onAction="#onShowTasks" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand;" text="Show Task List">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                    <padding>
                        <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
                    </padding>
                </Button>

                <Button mnemonicParsing="false" onAction="#onShowJobs" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand;" text="Show Job List">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                    <padding>
                        <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
                    </padding>
                </Button>

                <Region HBox.hgrow="ALWAYS" />

                <Button mnemonicParsing="false" onAction="#onRemoveSelected" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand;" text="Remove Selected">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                    <padding>
                        <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
                    </padding>
                </Button>

                <Label text="Filter:" textFill="#6c757d">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Label>
                <ComboBox fx:id="filterJobSelect" prefWidth="150.0" promptText="All Jobs" style="-fx-background-color: white; -fx-border-color: #CED4DA; -fx-border-radius: 4; -fx-background-radius: 4;" />
            </children>
        </HBox>

        <!-- Table Section -->
        <TableView fx:id="employeeTable" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 0);">
            <columns>
                <TableColumn fx:id="colSelect" prefWidth="50.0" sortable="false" style="-fx-alignment: CENTER;" text="" />
                <TableColumn fx:id="colName" prefWidth="200.0" text="Employee Name" />
                <TableColumn fx:id="colJob" prefWidth="180.0" text="Job Position" />
                <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
                <TableColumn fx:id="colTask" prefWidth="250.0" text="Current Task" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>