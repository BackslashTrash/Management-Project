<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootVBox" prefHeight="600.0" prefWidth="900.0" spacing="20.0" style="-fx-background-color: #F8F9FA;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.backslashtrash.project1.Controller">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    <children>
        <!-- Header Section -->
        <HBox alignment="CENTER_LEFT" spacing="15.0">
            <children>
                <Button mnemonicParsing="false" onAction="#onBack" style="-fx-background-color: white; -fx-border-color: #CED4DA; -fx-border-radius: 4; -fx-background-radius: 4; -fx-cursor: hand;" text="â† Back">
                    <font>
                        <Font size="13.0" />
                    </font>
                    <padding>
                        <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
                    </padding>
                </Button>
                <Label text="Task Management" textFill="#343a40">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
            </children>
        </HBox>

        <!-- Toolbar Section -->
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <TextField fx:id="searchTaskField" prefHeight="35.0" prefWidth="250.0" promptText="Search tasks..." style="-fx-background-color: white; -fx-border-color: #CED4DA; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 6;" />
                <Region HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#onRemoveSelectedTasks" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand;" text="Delete Selected">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                    <padding>
                        <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
                    </padding>
                </Button>
            </children>
        </HBox>

        <!-- Table Section -->
        <TableView fx:id="taskTable" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 0);" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colTaskSelect" prefWidth="50.0" sortable="false" style="-fx-alignment: CENTER;" text="" />
                <TableColumn fx:id="colTaskTitle" prefWidth="150.0" text="Title" />
                <TableColumn fx:id="colTaskDesc" prefWidth="250.0" text="Task Description" />
                <TableColumn fx:id="colTaskTime" prefWidth="150.0" text="Time" />
                <TableColumn fx:id="colTaskAssignee" prefWidth="150.0" text="Assigned To" />
                <!-- Added Status Column -->
                <TableColumn fx:id="colTaskStatus" prefWidth="100.0" text="Status" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
