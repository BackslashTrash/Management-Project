<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.backslashtrash.project1.Controller">
    <HBox VBox.vgrow="ALWAYS" />
    <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
        <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="100.0" spacing="16.0">
            <padding>
                <Insets top="10.0" />
            </padding>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Enter Username">
                <font>
                    <Font name="SwedenSans-Regular" size="16.0" />
                </font>
            <VBox.margin>
               <Insets top="2.0" />
            </VBox.margin>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Enter Password">
                <font>
                    <Font name="SwedenSans-Regular" size="16.0" />
                </font>
            <VBox.margin>
               <Insets />
            </VBox.margin>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Confirm Password">
                <font>
                    <Font name="SwedenSans-Regular" size="16.0" />
                </font>
            <VBox.margin>
               <Insets top="-3.0" />
            </VBox.margin>
            </Text>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Select Account Type">
            <font>
               <Font name="SwedenSans-Regular" size="16.0" />
            </font>
            <VBox.margin>
               <Insets top="-2.0" />
            </VBox.margin>
         </Text>
            <Button fx:id="homeButton" mnemonicParsing="false" onAction="#onHome" text="Home">
                <VBox.margin>
                    <Insets top="-9.0" />
                </VBox.margin>
            </Button>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Pass &amp; User must be 3-15 charactors">
            <font>
               <Font name="SwedenSans-Regular" size="16.0" />
            </font>
         </Text>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="4.0">
            <padding>
                <Insets top="5.0" />
            </padding>
            <TextField fx:id="enterUser">
                <VBox.margin>
                    <Insets />
                </VBox.margin>
            </TextField>
            <PasswordField fx:id="enterPass" />
            <PasswordField fx:id="confirmPass" />
            <ChoiceBox fx:id="accountTypeSelect" prefWidth="150.0" />
            <Button fx:id="confirmLogin" mnemonicParsing="false" onAction="#onConfirmRegister" text="Confirm" />
         <Text fx:id="warningMessage" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0">
            <font>
               <Font name="SwedenSans-Regular" size="16.0" />
            </font>
            <VBox.margin>
               <Insets top="5.0" />
            </VBox.margin>
         </Text>
        </VBox>
    </HBox>
    <HBox VBox.vgrow="ALWAYS" />
</VBox>
