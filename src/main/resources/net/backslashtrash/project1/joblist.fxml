<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootVBox" prefHeight="600.0" prefWidth="900.0" spacing="20.0" style="-fx-background-color: #F8F9FA;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.backslashtrash.project1.Controller">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    <children>
        <!-- Header Section -->
        <HBox alignment="CENTER_LEFT" spacing="15.0">
            <children>
                <!-- FIX: Changed action to #onBack -->
                <Button mnemonicParsing="false" onAction="#onBack" style="-fx-background-color: white; -fx-border-color: #CED4DA; -fx-border-radius: 4; -fx-background-radius: 4; -fx-cursor: hand;" text="â† Back">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Button>
                <Label text="Job Management" textFill="#343a40">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </HBox>

        <!-- Toolbar Section -->
        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 0);">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <Label text="Manage job profiles and salaries." textFill="#6c757d">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Label>
                <TextField fx:id="searchJobField" prefWidth="220.0" promptText="Search by title..." style="-fx-background-color: white; -fx-border-color: #CED4DA; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 6;" />
                <Region HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#onRemoveSelectedJobs" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand;" text="Delete Selected">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                    <padding>
                        <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
                    </padding>
                </Button>
            </children>
        </HBox>

        <!-- Table Section -->
        <TableView fx:id="jobTable" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 0);">
            <columns>
                <TableColumn fx:id="colJobSelect" prefWidth="50.0" sortable="false" style="-fx-alignment: CENTER;" text="" />
                <TableColumn fx:id="colJobTitle" prefWidth="250.0" text="Job Title" />
                <TableColumn fx:id="colJobPay" prefWidth="150.0" text="Pay ($/hr)" />
                <TableColumn fx:id="colJobDesc" prefWidth="400.0" text="Description" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>