<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="rootVBox" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.backslashtrash.project1.Controller">
   <children>
      <HBox VBox.vgrow="ALWAYS" />
       <HBox alignment="BOTTOM_CENTER" VBox.vgrow="ALWAYS">
         <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
            <children>
               <Text fill="#4a93ff" strokeType="OUTSIDE" strokeWidth="0.0" text="Management Engine" textAlignment="CENTER">
                  <font>
                     <Font name="Segoe UI Bold" size="26.0" />
                  </font>
               </Text>
               <HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0">
                  <children>
                     <Button fx:id="signUpButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onSignup" prefHeight="43.0" prefWidth="102.0" text="Sign up" textAlignment="RIGHT">
                        <font>
                           <Font name="Yu Gothic UI Semibold" size="20.0" />
                        </font>
                     </Button>
                     <Button fx:id="loginButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onLogin" prefHeight="43.0" prefWidth="102.0" text="Login" textAlignment="RIGHT">
                        <font>
                           <Font name="Yu Gothic UI Semibold" size="20.0" />
                        </font>
                     </Button>
                  </children></HBox>
            </children>
         </VBox>
       </HBox>
      <HBox VBox.vgrow="ALWAYS" />
   </children>
</VBox>
